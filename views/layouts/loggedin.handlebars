  <body class="background-color">
    <header>
      <nav
        class="navbar navbar-expand-lg navbar-light background-color mx-auto col-sm-12 col-md-12 col-lg-12"
      >
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <a href="/" class="navbar-brand">
            <img src="/assets/logo.png" height="100px" alt="seeded" />
          </a>
          <form
            class="form-inline my-2 my-lg-0 background-color"
            id="searchBar"
          >
            <input
              id="search-input"
              class="form-control mr-sm-2"
              type="text"
              placeholder="search for a user..."
              aria-label="Search"
            />
            <button
              id="search-btn"
              class="btn btn-outline-success my-2 my-sm-0"
              type="submit"
            >üîç</button>
          </form>
          <ul class="navbar-nav ml-auto gap-">
            <li class="nav-item">
              <button
                type="button"
                class="btn btn-style"
                data-toggle="tooltip"
                data-placement="bottom"
                title="Click me to add a new plant!"
              ><a href="/profile/newPlant">+</a></button>
            </li>
            <li class="nav-item active">
              <button type="button" class="btn btn-style">
                <a href="/about">About</a>
              </button>
            </li>
            <li class="nav-item">
              <button type="button" class="btn btn-style">
                <a href="/dashboard">Community Garden</a>
              </button>
            </li>
            <li class="nav-item">
              <button type="button" class="btn btn-style">
                <a href="/profile">My Greenhouse</a>
              </button>
            </li>
            <li class="nav-item">
              <button type="button" class="btn btn-style">
                <a id="logout-link" href="#">Logout</a>
              </button>
            </li>
            <li>
              <div
                class="tooltip-avatar"
                data-toggle="tooltip"
                data-placement="bottom"
                title="Update my profile picture"
              >
                <a
                  class="user-avatar"
                  data-toggle="modal"
                  data-target="#exampleModalCenter"
                >
                  <img
                    class="avatar-image"
                    src="{{user.file_name}}"
                    alt="User's profile picture"
                  />
                </a>
              </div>
            </li>
          </ul>
        </div>
      </nav>
    </header>
