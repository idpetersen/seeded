{{! this is the basic card template to render each plant post }}

<h1>Welcome to the dashboard, you'll see ALL posts here</h1>

{{! this is the main div that contains all plant cards, gap of 5 to create margins between the cards }}
  <div class="d-grid gap-5">

{{#each plants}}
    {{! this is an individual plant card }}
    <div class="mx-auto col-sm-12 col-md-10 col-lg-4">

      <div class="card mx-auto">
        <div class="card-body" style="border: 3px solid black;">
          <h3>{{User.username}}</h3>
          <h5>{{title}}</h5>
          <img src='{{file_name}}' class="card-img-top" alt="..." />
          <p class="card-text">{{caption}}</p>
        </div>
        <div class="card-body uproots">
          {{#each Upvotes}}
          <p class="card-text">ðŸŒ± {{content}} uproots</p>
          {{/each}}
        </div>
        {{#each Comments}}
        <div class="card-body all-comments d-flex mt-1 mb-1" style="border: 2px solid black; justify-content:space-between; border-radius: 10px; background-color: var(--sagegreen);">
          <p class="card-text"><strong>{{User.username}}</strong>: {{content}}</p>
          <a class="trash-comment" href="#" data-commentid="{{id}}"><img src="https://img.icons8.com/material-outlined/24/000000/trash--v1.png"/></a>
        </div>
        {{/each}}
        <form class="input-group mb-3 pt-2 comment-form">
          <input type="hidden" name="plant-id" value="{{id}}">
          <input placeholder="enter a comment..." name="comment-body" class="form-input comment-input" type="text">
          {{!-- <textarea name = "comment-body" class="form-input"></textarea> --}}
          <button
            class="comment-btn"
            type="submit"
            id="button-addon2"
          >Submit</button>
        </form>

      </div>
    </div>
{{/each}}
  </div>
  <script src="/js/comment.js"></script>
  <script src="/js/deleter.js"></script>