{{! this is the basic card template to render each plant post }}

<h1>Welcome to the dashboard, you'll see ALL posts here</h1>

{{! this is the main div that contains all plant cards, gap of 5 to create margins between the cards }}
  <div class="d-grid gap-5">

{{#each plants}}
    {{! this is an individual plant card }}
    <div class="mx-auto col-sm-12 col-md-8 col-lg-8">

      <div class="card mx-auto">
        <div class="card-body" style="border: 3px solid black;">
          <h3>{{User.username}}</h3>
          <h5>{{title}}</h5>
          <img src="/assets/plant2.jpeg" class="card-img-top" alt="..." />
          <p class="card-text">{{caption}}</p>
        </div>
        <div class="card-body uproots">
          {{#each Upvotes}}
          <p class="card-text">ðŸŒ± {{content}} uproots</p>
          {{/each}}
        </div>
        {{#each Comments}}
        <div class="card-body all-comments" style="border: 2px solid black;">
          <p class="card-text">{{content}}</p>
        </div>
        {{/each}}
        <div class="input-group mb-3">
          <input
            type="text"
            class="form-control"
            placeholder="enter a comment..."
            aria-label="Recipient's username"
            aria-describedby="button-addon2"
          />
          <button
            class="btn btn-outline-secondary"
            type="button"
            id="button-addon2"
          >Submit</button>
        </div>

      </div>
    </div>
{{/each}}
  </div>
