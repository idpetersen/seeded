<h1 class="title-text">Welcome to Your Greenhouse</h1>
  <input type="hidden" name="user-id" value="{{user.id}}"> 

<div class="card-parent d-grid gap-5">

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Upload or update your profile picture</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
    <button id="upload_widget" class="cloudinary-button">
    <input src='/assets/upload-avatar.png' class="card-img-top" type="image" id="new=plant-img">
    <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    </input>
</button>
      </div>
    </div>
  </div>
</div>
  {{#each user.Plants}}
    {{! this is the basic card template to render each plant post }}
    <div class="mx-auto col-sm-12 col-md-10 col-lg-4">
      <div class="card plant-div">
        <a class="trash-plant" href="#" data-plantid="{{id}}"><img
            src="https://img.icons8.com/material-outlined/24/000000/trash--v1.png"/>
        </a>
        <div class="card-body post-card">
          <h5 class="title-size">{{title}}</h5>
          <img src='{{file_name}}' class="card-img-top" alt="photo of a plant you have uploaded" />
          <p class="card-text caption-size">{{caption}}</p><hr>
          <p class="timestamp">Germinated on: {{createdAt}}</p>
        </div>
        <div class="card-body uproots">
          <p class="uproot-style"><button
              class="upVote"
              data-plantid="{{id}}"
            >ðŸŒ±</button>
            {{upVote_counter}}
            uproots</p>
        </div>
        {{#each Comments}}
          <div class="card-body all-comments comment-style d-flex mt-1 mb-1">
            <p class="card-text"><a href="/profile/{{User.id}}"><strong
                >{{User.username}}</strong></a>:
              {{content}}</p>
            <a class="trash-comment" href="{{Plant.id}}" data-commentid="{{id}}"><img
                src="https://img.icons8.com/material-outlined/24/000000/trash--v1.png" alt = 'image of a trash can'
              /></a>
          </div>
        {{/each}}
        <form class="input-group comment-div mb-3 pt-2 comment-form">
          <input type="hidden" name="plant-id" value="{{id}}" />
          <input
            placeholder="enter a comment..."
            name="comment-body"
            class="comment-input"
            type="text"
          />
          <button
            class="comment-btn"
            type="submit"
            id="button-addon2"
          >submit</button>
        </form>

      </div>
    </div>
  {{/each}}
</div>
<script src="/js/comment.js"></script>
<script src="/js/deleter.js"></script>
<script src="/js/upvote.js"></script>
<script src="/js/avatarUpdate.js"></script>